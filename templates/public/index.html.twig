{% extends 'base.html.twig' %}

{% block title %}Événements à venir{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-end mb-3">
                {% if app.user %}
                    <a href="{{ path('app_event_new') }}" class="btn btn-success me-2">
                        <i class="bi bi-plus-circle"></i> Créer un événement
                    </a>
                    <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">
                        <i class="bi bi-box-arrow-right"></i> Déconnexion
                    </a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-outline-primary me-2">
                        <i class="bi bi-box-arrow-in-right"></i> Connexion
                    </a>
                    <a href="{{ path('app_signup') }}" class="btn btn-primary">
                        <i class="bi bi-person-plus"></i> Inscription
                    </a>
                {% endif %}
            </div>
            <h1 class="display-4 text-center mb-4">Événements à venir</h1>
            <p class="lead text-center text-muted">Découvrez les prochains événements disponibles</p>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="row mb-4 w-full">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-funnel"></i> Filtrer par date
                    </h5>
                    <form method="get" action="{{ path('app_index') }}" class="row g-3">
                        <div class="col-md-5">
                            <label for="start_date" class="form-label">Date de début</label>
                            <input type="date" class="form-control" id="start_date" name="start_date" value="{{ start_date }}">
                        </div>
                        <div class="col-md-5">
                            <label for="end_date" class="form-label">Date de fin</label>
                            <input type="date" class="form-control" id="end_date" name="end_date" value="{{ end_date }}">
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search"></i> Filtrer
                            </button>
                        </div>
                        {% if start_date or end_date %}
                            <div class="col-12">
                                <a href="{{ path('app_index') }}" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-x-circle"></i> Réinitialiser les filtres
                                </a>
                            </div>
                        {% endif %}
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for event in events %}
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">{{ event.title }}</h5>

                        {% if event.description %}
                            <p class="card-text text-muted">{{ event.description }}</p>
                        {% endif %}

                        <hr>

                        <div class="mb-2">
                            <i class="bi bi-calendar-event"></i>
                            <strong>Début :</strong> {{ event.begin|date('d/m/Y à H:i') }}
                        </div>

                        <div class="mb-2">
                            <i class="bi bi-calendar-check"></i>
                            <strong>Fin :</strong> {{ event.endDate|date('d/m/Y à H:i') }}
                        </div>

                        <div class="mb-2">
                            <i class="bi bi-geo-alt"></i>
                            <strong>Lieu :</strong> {{ event.location }}
                        </div>

                        <div class="mb-2">
                            <i class="bi bi-person"></i>
                            <strong>Organisateur :</strong> {{ event.owner.firstname }} {{ event.owner.lastname }}
                        </div>

                        <div>
                            <i class="bi bi-people"></i>
                            <strong>Participants :</strong>
                            <span class="badge bg-primary">{{ event.participants|length }}</span>
                        </div>
                    </div>

                    <div class="card-footer bg-transparent">
                        <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-primary w-100">Voir les détails</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-md-8 mx-auto">
                <div class="alert alert-info text-center" role="alert">
                    <h4 class="alert-heading">Aucun événement à venir</h4>
                    <p>Il n'y a actuellement aucun événement planifié.</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
