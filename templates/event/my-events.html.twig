{% extends 'base.html.twig' %}

{% block title %}Mes événements{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Mes événements</h1>
            <a href="{{ path('app_index') }}" class="btn btn-secondary">Retour à l'accueil</a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% if events is empty %}
            <div class="alert alert-info text-center" role="alert">
                <h4 class="alert-heading">Aucun événement</h4>
                <p>Vous n'êtes inscrit à aucun événement pour le moment.</p>
                <hr>
                <a href="{{ path('app_index') }}" class="btn btn-primary">Découvrir les événements</a>
            </div>
        {% else %}
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                {% for event in events %}
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">{{ event.title }}</h5>

                                {% if event.description %}
                                    <p class="card-text text-muted">{{ event.description }}</p>
                                {% endif %}

                                <hr>

                                <div class="mb-2">
                                    <i class="bi bi-calendar-event"></i>
                                    <strong>Début :</strong> {{ event.begin|date('d/m/Y à H:i') }}
                                </div>

                                <div class="mb-2">
                                    <i class="bi bi-calendar-check"></i>
                                    <strong>Fin :</strong> {{ event.endDate|date('d/m/Y à H:i') }}
                                </div>

                                <div class="mb-2">
                                    <i class="bi bi-geo-alt"></i>
                                    <strong>Lieu :</strong> {{ event.location }}
                                </div>

                                <div class="mb-2">
                                    <i class="bi bi-person"></i>
                                    <strong>Organisateur :</strong> {{ event.owner.firstName|capitalize }} {{ event.owner.lastName }}
                                </div>

                                <div>
                                    <i class="bi bi-people"></i>
                                    <strong>Participants :</strong>
                                    <span class="badge bg-primary">{{ event.participants|length }}</span>
                                </div>
                            </div>

                            <div class="card-footer bg-transparent">
                                <div class="d-grid gap-2">
                                    <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-primary">Voir les détails</a>

                                    <form method="post" action="{{ path('app_event_unsubscribe', {'id': event.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('unsubscribe' ~ event.id) }}">
                                        <button type="submit" class="btn btn-danger w-100">
                                            <i class="bi bi-x-circle"></i> Se désinscrire
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
