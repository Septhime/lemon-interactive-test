{% extends 'base.html.twig' %}

{% block title %}{{ event.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>{{ event.title }}</h1>
            <a href="{{ path('app_index') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Détails de l'événement</h5>

                <div class="mb-3">
                    <strong>Description :</strong>
                    <p>{{ event.description }}</p>
                </div>

                <div class="mb-3">
                    <strong>Date de début :</strong>
                    <p>{{ event.begin|date('d/m/Y à H:i') }}</p>
                </div>

                <div class="mb-3">
                    <strong>Date de fin :</strong>
                    <p>{{ event.endDate|date('d/m/Y à H:i') }}</p>
                </div>

                <div class="mb-3">
                    <strong>Lieu :</strong>
                    <p>{{ event.location }}</p>
                </div>

                <div class="mb-3">
                    <strong>Créé par :</strong>
                    <p>{{ event.owner.firstName|capitalize }} {{ event.owner.lastName }}</p>
                </div>

                <div class="mb-3">
                    <strong>Participants :</strong>
                    {% if event.participants is empty %}
                        <p>Aucun participant pour le moment.</p>
                    {% else %}
                        <ul>
                            {% for participant in event.participants %}
                                <li>{{ participant.firstName|capitalize }} {{ participant.lastName }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>

                <div class="mt-4">
                    {% if app.user %}
                        {% if app.user == event.owner %}
                            <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-warning">Modifier</a>

                            <form method="post" action="{{ path('app_event_delete', {'id': event.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                        {% else %}
                            {% if event.participants.contains(app.user) %}
                                <form method="post" action="{{ path('app_event_unsubscribe', {'id': event.id}) }}" style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('unsubscribe' ~ event.id) }}">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-x-circle"></i> Se désinscrire
                                    </button>
                                </form>
                            {% else %}
                                <form method="post" action="{{ path('app_event_subscribe', {'id': event.id}) }}" style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('subscribe' ~ event.id) }}">
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-check-circle"></i> S'inscrire
                                    </button>
                                </form>
                            {% endif %}
                        {% endif %}
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-primary">Connectez-vous pour vous inscrire</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
